{
    "name": "aifr3d_dev_container",
    "build": { "dockerfile": "Dockerfile" },
    "customizations": {
      "vscode": {
        "extensions": [
          "nvarner.typst-lsp",
          "tomoki1207.pdf",
          "ms-vscode.cpptools-extension-pack",
          "ms-python.python"
          // TODO: Add formatters
          // TODO: Add workspace config - formatOnSave (Black for Python), etc.
        ]
      }
    },
    "containerEnv": {
      "DISPLAY": "unix:0"
  },
    "mounts": [
      "type=bind,source=/dev/,target=/dev/",
      "type=bind,source=/tmp/.X11-unix,target=/tmp/.X11-unix,consistency=cached"
    ],
    "runArgs": ["--privileged"]
  }

